<!-- Score Display -->
<div id="score-display" class="score-display">
    <div>Redemption: <span id="redemption-rate">50</span>%</div>
    <div>Round: <span id="round-display">1</span>/38</div>
</div>

<!-- Narrative Screen -->
<div id="narrative-screen" class="screen hidden">
    <div id="narrative-text" class="text-display"></div>
    <button id="show-options-btn" class="btn show-options-btn" title="Show Options">*</button>
    <div id="options-container" class="options-container hidden">
        <!-- Options will be dynamically inserted here -->
    </div>
    <button id="advance-button" class="btn advance-btn hidden">Advance</button>
</div>

